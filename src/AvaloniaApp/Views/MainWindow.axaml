<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="AvaloniaApp.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="AI Demo - SignalR Client">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="10">
        <!-- Header with connection controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10">
            <TextBlock Text="{Binding Username, StringFormat='User: {0}'}" 
                       VerticalAlignment="Center"
                       IsVisible="{Binding IsAuthenticated}"/>
            <Button Content="Connect" 
                    Command="{Binding ConnectCommand}"
                    IsEnabled="{Binding !IsConnected}"/>
            <Button Content="Disconnect" 
                    Command="{Binding DisconnectCommand}"
                    IsEnabled="{Binding IsConnected}"/>
            <Button Content="Refresh" 
                    Command="{Binding LoadItemsCommand}"
                    IsEnabled="{Binding IsConnected}"/>
            <Button Content="Logout" 
                    Command="{Binding LogoutCommand}"/>
            <TextBlock Text="{Binding StatusMessage}" 
                       VerticalAlignment="Center" 
                       Foreground="Gray"/>
        </StackPanel>

        <!-- Main content area -->
        <Grid Grid.Row="1" ColumnDefinitions="2*,*" Margin="0,10">
            <!-- Items list -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Padding="5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Items" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <ListBox ItemsSource="{Binding Items}"
                             SelectedItem="{Binding SelectedItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Description}" 
                                               TextWrapping="Wrap" 
                                               Foreground="Gray"
                                               FontSize="12"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Item editor -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="10,0,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="Item Editor" FontWeight="Bold"/>
                    
                    <TextBlock Text="Name:"/>
                    <TextBox Text="{Binding NewItemName}" Watermark="Enter item name"/>
                    
                    <TextBlock Text="Description:"/>
                    <TextBox Text="{Binding NewItemDescription}" 
                             Watermark="Enter description"
                             AcceptsReturn="True"
                             Height="100"
                             TextWrapping="Wrap"/>
                    
                    <Button Content="Create New Item" 
                            Command="{Binding CreateItemCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                    
                    <Separator Margin="0,10"/>
                    
                    <TextBlock Text="Selected Item Actions:"/>
                    <Button Content="Update Selected" 
                            Command="{Binding UpdateItemCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                    <Button Content="Delete Selected" 
                            Command="{Binding DeleteItemCommand}"
                            IsEnabled="{Binding IsConnected}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Status bar -->
        <Border Grid.Row="2" 
                BorderBrush="Gray" 
                BorderThickness="0,1,0,0" 
                Padding="5"
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Spacing="10">
                <TextBlock Text="Status:"/>
                <TextBlock Text="{Binding IsConnected, StringFormat='Connected: {0}'}"/>
                <TextBlock Text="{Binding Items.Count, StringFormat='Items: {0}'}" Margin="20,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>

</Window>
